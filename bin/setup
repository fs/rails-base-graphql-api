#!/usr/bin/env sh

set -e

if [ ! -f .env ]; then
  cp .env.example .env
fi

# stop server (if it's running) and clean old data
docker-compose down
docker volume prune -f
docker rmi $(docker images rails_base_graphql_api -q)

docker-compose up --build --detach
docker-compose exec app bin/rails db:create db:schema:load
docker-compose exec app bin/rails db:seed
